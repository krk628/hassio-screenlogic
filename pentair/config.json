        "pentair_pass":"1234"
},
    "schema": {
        "mqtt_broker":"str",
        "mqtt_insecure":"bool",
        "mqtt_pass":"str",
        "mqtt_port":"port",
        "mqtt_user":"str",
        "pentair_conn":"match(broadcast|direct|remote)",
        "pentair_ip":"str",
        "pentair_system":"str",
        "pentair_pass":"str"
    }
